{
  "name": "braviaremotecontrol",
  "version": "1.1.3",
  "description": "An Electron app to control Sony Bravia TVs.",
  "main": "main.js",
  "author": "Joshua Fairbank",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "publish": [{
             "provider": "github",
             "owner": "jpitty03",
             "repo": "BraviaRemoteControl"
         }],
    "appId": "com.joshfairbank.sony-bravia-remote",
    "productName": "Sony Bravia Remote Control",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "main.js",
      "preload.js",
      "style.css",
      "utils/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "electron-log": "^4.4.1",
    "electron-updater": "^6.3.9",
    "node-ssdp": "^4.0.1",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "electron": "^33.0.1",
    "electron-builder": "^25.1.8"
  }
}
